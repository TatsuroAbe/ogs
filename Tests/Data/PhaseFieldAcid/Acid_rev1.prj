<?xml version="1.0" encoding="ISO-8859-1"?>
<OpenGeoSysProject>
    <meshes>
        <mesh>acid_rev3.vtu</mesh>
        <mesh>circle_ic.vtu</mesh>
        <mesh>bar_top.vtu</mesh>
        <mesh>bar_bottom.vtu</mesh>
        <mesh>bar_right.vtu</mesh>
        <mesh>bar_left.vtu</mesh>
    </meshes>
    <processes>
        <process>
            <name>PhaseFieldAcid</name>
            <type>PHASEFIELDACID</type>
            <coupling_scheme>staggered</coupling_scheme>
            <integration_order>2</integration_order>
            <phasefieldacid_parameters>
                <chemical_diffusivity>D</chemical_diffusivity>
                <alpha>alpha</alpha>
                <rrc>rrc</rrc>
                <epsilon>epsilon</epsilon>
                <tau>tau</tau>
            </phasefieldacid_parameters>
            <process_variables>
                <concentration>concentration</concentration>
                <phasefield>phasefield</phasefield>
            </process_variables>
            <specific_body_force>0 0 </specific_body_force>
        </process>
    </processes>
    <time_loop>
        <global_process_coupling>
            <max_iter> 1000 </max_iter>
            <convergence_criteria>
                <convergence_criterion >
                    <type>DeltaX</type>
                    <norm_type>INFINITY_N</norm_type>
                    <abstol>1.e-1</abstol>
                    <reltol>1.e-1</reltol>
                </convergence_criterion>
                <!-- convergence criterion for the second process -->
                <convergence_criterion >
                    <type>DeltaX</type>
                    <norm_type>INFINITY_N</norm_type>
                    <abstol>1.e-4</abstol>
                    <reltol>1.e-10</reltol>
                </convergence_criterion>
            </convergence_criteria>
        </global_process_coupling>
        <processes>
            <process ref="PhaseFieldAcid">
                <nonlinear_solver>basic_picard_c</nonlinear_solver>
                <convergence_criterion>
                    <type>DeltaX</type>
                    <norm_type>NORM2</norm_type>
                    <reltol>1.e-8</reltol>
                </convergence_criterion>
                <time_discretization>
                    <type>BackwardEuler</type>
                </time_discretization>
                <time_stepping>
                    <type>FixedTimeStepping</type>
                    <t_initial>0</t_initial>
                    <t_end>100.0</t_end>
                    <timesteps>
                        <pair>
                            <repeat>100</repeat>
                            <delta_t>1e-1</delta_t>
                        </pair>
                    </timesteps>
                </time_stepping>
            </process>
            <process ref="PhaseFieldAcid">
                <nonlinear_solver>basic_picard_ph</nonlinear_solver>
                <convergence_criterion>
                    <type>DeltaX</type>
                    <norm_type>NORM2</norm_type>
                    <reltol>1.e-8</reltol>
                </convergence_criterion>
                <time_discretization>
                    <type>BackwardEuler</type>
                </time_discretization>
                <time_stepping>
                    <type>FixedTimeStepping</type>
                    <t_initial>0</t_initial>
                    <t_end>100.0</t_end>
                    <timesteps>
                        <pair>
                            <repeat>100</repeat>
                            <delta_t>1e-1</delta_t>
                        </pair>
                    </timesteps>
                </time_stepping>
            </process>
        </processes>
        <output>
            <variables>
                <variable>concentration</variable>
                <variable>phasefield</variable>
            </variables>
            <type>VTK</type>
            <prefix>Acid_simple_solid</prefix>
            <timesteps>
                <pair>
                    <repeat>10</repeat>
                    <each_steps>1</each_steps>
                </pair>
                <pair>
                    <repeat>10</repeat>
                    <each_steps>1</each_steps>
                </pair>
            </timesteps>
        </output>
    </time_loop>
    <parameters>
        <!-- Mechanics -->
        <parameter>
            <name>D</name>
            <type>Constant</type>
            <value>2.e-6</value>
        </parameter>
        <parameter>
            <name>alpha</name>
            <type>Constant</type>
            <value>0.5</value>
        </parameter>
        <parameter>
            <name>rrc</name>
            <type>Constant</type>
            <value>100.</value>
        </parameter>
        <parameter>
            <name>epsilon</name>
            <type>Constant</type>
            <value>0.00125</value>
        </parameter>
        <parameter>
            <name>tau</name>
            <type>Constant</type>
            <value>0.78125</value>
        </parameter>

        <parameter>
            <name>concentration0</name>
            <type>Constant</type>
            <values>0 </values>
        </parameter>
        <parameter>
            <name>concentration_m0p1</name>
            <type>Constant</type>
            <values>-0.1 </values>
        </parameter>
        <parameter>
            <name>concentration_p0p1</name>
            <type>Constant</type>
            <values>0.1 </values>
        </parameter>
        <parameter>
            <name>concentration_ic</name>
<!--             <type>Constant</type>
            <value>0</value> -->
            <type>MeshNode</type>
            <field_name>c-ic</field_name>
        </parameter>
        <parameter>
            <name>phasefield_solid</name>
            <type>Constant</type>
            <value>-1</value>
        </parameter>
        <parameter>
            <name>phasefield_liquid</name>
            <type>Constant</type>
            <value>1</value>
        </parameter>
        <parameter>
            <name>phasefield_ic</name>
<!--             <type>Constant</type>
            <value>0</value> -->
            <type>MeshNode</type>
            <field_name>pf-ic</field_name>
        </parameter>
        <parameter>
            <name>dirichlet0</name>
            <type>Constant</type>
            <value>0</value>
        </parameter>
    </parameters>
    <curves>
        <curve>
            <name>dirichlet_time</name>
            <coords>0 0.1 1.0</coords>
            <values>0 0.8 1.0</values>
        </curve>
    </curves>

    <process_variables>
        <process_variable>
            <name>concentration</name>
            <components>1</components>
            <order>1</order>
            <initial_condition>concentration_ic</initial_condition>
            <boundary_conditions>

                <boundary_condition>
                    <mesh>bar_top</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>concentration_p0p1</parameter>
                </boundary_condition>
                <boundary_condition>
                    <mesh>bar_right</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>concentration_p0p1</parameter>
                </boundary_condition>
                <boundary_condition>
                    <mesh>circle_ic</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>concentration0</parameter>
                </boundary_condition>

            </boundary_conditions>
        </process_variable>

        <process_variable>
            <name>phasefield</name>
            <components>1</components>
            <order>1</order>
            <initial_condition>phasefield_ic</initial_condition>
            <boundary_conditions>
                <boundary_condition>
                    <mesh>bar_top</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>phasefield_liquid</parameter>
                </boundary_condition>
                <boundary_condition>
                    <mesh>bar_right</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>phasefield_liquid</parameter>
                </boundary_condition>
                <boundary_condition>
                    <mesh>circle_ic</mesh>
                    <type>Dirichlet</type>
                    <component>0</component>
                    <parameter>phasefield_solid</parameter>
                </boundary_condition>

            </boundary_conditions>
        </process_variable>

    </process_variables>
    <nonlinear_solvers>
        <nonlinear_solver>
            <name>basic_picard_c</name>
            <type>Picard</type>
            <max_iter>200</max_iter>
            <linear_solver>linear_solver_c</linear_solver>
        </nonlinear_solver>
        <nonlinear_solver>
            <name>basic_picard_ph</name>
            <type>Picard</type>
            <max_iter>200</max_iter>
            <linear_solver>linear_solver_ph</linear_solver>
        </nonlinear_solver>
    </nonlinear_solvers>
    <linear_solvers>
        <linear_solver>
            <name>linear_solver_c</name>
            <eigen>
                <solver_type>SparseLU</solver_type>
                <scaling>true</scaling>
                <!--solver_type>BiCGSTAB</solver_type>
                <precon_type>ILUT</precon_type>
                <max_iteration_step>10000</max_iteration_step>
                <error_tolerance>1e-16</error_tolerance-->
            </eigen>
            <petsc>
                <parameters>-ksp_type cg -pc_type bjacobi -ksp_atol 1e-16 -ksp_rtol 1e-16 </parameters>
            </petsc>
        </linear_solver>
        <linear_solver>
            <name>linear_solver_ph</name>
            <eigen>
                <solver_type>SparseLU</solver_type>
                <scaling>true</scaling>
                <!--solver_type>BiCGSTAB</solver_type>
                <precon_type>ILUT</precon_type>
                <max_iteration_step>10000</max_iteration_step>
                <error_tolerance>1e-16</error_tolerance-->
            </eigen>
            <petsc>
                <parameters>-ksp_type cg -pc_type bjacobi -ksp_atol 1e-16 -ksp_rtol 1e-16 </parameters>
            </petsc>
        </linear_solver>
    </linear_solvers>
</OpenGeoSysProject>
